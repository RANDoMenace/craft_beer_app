<h1>Users#index</h1>
<p>Find me in app/views/users/index.html.erb</p>

<table>
  <tr>
    <th>User</th>
    <th>Email</th>
    <th colspan="2"></th>
  </tr>

  <% @users.each do |user| %>
  <tr>
  <td><%= image_tag user.pic_url %></td>
  <td><%= user.email %></td>
  <td><%= link_to "Show", user_path(user) %>
  <td><%= link_to "Edit", edit_user_path(user) %></td>
  <td><%= link_to "Destroy", user_path(user),
          method: :delete,
          data: { confirm: 'Are you sure?'} %></td>
  </tr>
  <% end %>
</table>



